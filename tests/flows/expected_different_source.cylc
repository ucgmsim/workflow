[scheduling]
    [[graph]]
        R1 = """
        check_srf_Darfield => create_e3d_par_Darfield
        copy_input => check_srf_Darfield
        copy_input => nshm_to_realisation_Darfield
        generate_station_coordinates_Darfield => create_e3d_par_Darfield
        generate_velocity_model_Darfield => create_e3d_par_Darfield
        generate_velocity_model_parameters_Darfield => generate_station_coordinates_Darfield
        generate_velocity_model_parameters_Darfield => generate_velocity_model_Darfield
        generate_velocity_model_parameters_Darfield => write_model_coordinates_Darfield
        nshm_to_realisation_Darfield => generate_velocity_model_parameters_Darfield
        write_model_coordinates_Darfield => create_e3d_par_Darfield
        """
    [runtime]
    [[root]]
        platform = mahuika-slurm
        pre-script = """
        module load Apptainer
        """
        [[[directives]]]
                --account = nesi00213
    [[check_srf_Darfield]]
        script = apptainer exec -c --bind "$PWD:/out,$CYLC_WORKFLOW_SHARE_DIR/Darfield:/share" /nesi/nobackup/nesi00213/containers/runner_latest.sif check-srf /share/realisation.json /share/realisation.srf
    [[copy_input]]
        platform = localhost
        script = "[[ ! -d $CYLC_WORKFLOW_RUN_DIR/input ]] || cp -rn $CYLC_WORKFLOW_RUN_DIR/input/. $CYLC_WORKFLOW_SHARE_DIR"
    [[create_e3d_par_Darfield]]
        platform = localhost
        script = apptainer exec /nesi/nobackup/nesi00213/containers/runner_latest.sif create-e3d-par $CYLC_WORKFLOW_SHARE_DIR/Darfield/realisation.json $CYLC_WORKFLOW_SHARE_DIR/Darfield/realisation.srf $CYLC_WORKFLOW_SHARE_DIR/Darfield/Velocity_Model $CYLC_WORKFLOW_SHARE_DIR/Darfield/stations $CYLC_WORKFLOW_SHARE_DIR/Darfield/model $CYLC_WORKFLOW_SHARE_DIR/Darfield/LF --emod3d-path /nesi/project/nesi00213/opt/maui/hybrid_sim_tools/emod3d-mpi_v3.0.8 --scratch-ffp $CYLC_WORKFLOW_SHARE_DIR/Darfield/LF
    [[generate_station_coordinates_Darfield]]
    platform = localhost        
    script = apptainer exec -c --bind "$PWD:/out,$CYLC_WORKFLOW_SHARE_DIR/Darfield:/share" /nesi/nobackup/nesi00213/containers/runner_latest.sif generate-station-coordinates /share/realisation.json /share/stations --stat-file /stations.ll
    [[ generate_velocity_model_Darfield ]]
        script = apptainer exec -c --bind "$PWD:/out,$CYLC_WORKFLOW_SHARE_DIR/Darfield:/share" /nesi/nobackup/nesi00213/containers/runner_latest.sif sh -c 'generate-velocity-model /share/realisation.json /share/Velocity_Model --num-threads $(nproc)'
        [[[directives]]]
                --cpus-per-task = 32
                --time = 01:00:00
                --partition = milan
    [[generate_velocity_model_parameters_Darfield]]
        script = apptainer exec -c --bind "$PWD:/out,$CYLC_WORKFLOW_SHARE_DIR/Darfield:/share" /nesi/nobackup/nesi00213/containers/runner_latest.sif generate-velocity-model-parameters /share/realisation.json
    [[nshm_to_realisation_Darfield]]
        platform = localhost
        script = apptainer exec -c --bind "$PWD:/out,$CYLC_WORKFLOW_SHARE_DIR/Darfield:/share" /nesi/nobackup/nesi00213/containers/runner_latest.sif nshm2022-to-realisation /nshmdb.db Darfield /share/realisation.json 24.2.2.2
    [[write_model_coordinates_Darfield]]
        platform = localhost
        script = apptainer exec -c --bind "$PWD:/out,$CYLC_WORKFLOW_SHARE_DIR/Darfield:/share" /nesi/nobackup/nesi00213/containers/runner_latest.sif generate-model-coordinates /share/realisation.json /share/model